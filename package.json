  "author": "Florian 'lordcraymen' Patzke",
  "homepage": "https://github.com/lordcraymen/adr-toolkit#readme",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.1.0",
    "fast-glob": "^3.3.2",
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "tsup": "^8.0.2",
    "typescript": "5.3.3"
  }
}
