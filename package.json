{
  "name": "@lordcraymen/adr-toolkit",
  "version": "3.0.0",
  "description": "CLI tooling to bootstrap, validate and publish Architecture Decision Records.",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./cli": "./dist/cli.js",
    "./presets/depcruise": "./presets/depcruise.cjs",
    "./presets/eslint-boundaries": "./presets/eslint-boundaries.cjs",
    "./templates/adr/ADR-0000-template.md": "./templates/adr/ADR-0000-template.md",
    "./templates/dependency-cruiser": "./templates/.dependency-cruiser.js",
    "./templates/pull-request": "./templates/PULL_REQUEST_TEMPLATE.md",
    "./templates/agent-rules-snippet": "./templates/AGENT_RULES-snippet.md"
  },
  "bin": {
    "adrx": "dist/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "lint": "eslint \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:unit": "vitest run tests/unit/",
    "test:integration": "vitest run tests/integration/",
    "test:e2e": "vitest run tests/e2e/",
    "test:coverage": "vitest run --coverage",
    "adr:update": "adrx build && git add docs/adr/",
    "prepare": "husky",
    "semantic-release": "semantic-release",
    "commit": "git-cz"
  },
  "files": [
    "dist",
    "templates",
    "presets"
  ],
  "keywords": [
    "adr",
    "architecture decision records",
    "cli",
    "documentation"
  ],
  "author": "Florian 'lordcraymen' Patzke",
  "homepage": "https://github.com/lordcraymen/adr-toolkit#readme",
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "commander": "^11.1.0",
    "fast-glob": "^3.3.2",
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^12.2.0",
    "@cucumber/gherkin": "^35.1.0",
    "@lordcraymen/adr-toolkit": "^1.3.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.6",
    "@types/node": "^20.19.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "semantic-release": "^24.2.9",
    "tsup": "^8.0.2",
    "typescript": "5.3.3",
    "vitest": "^3.2.4"
  }
}
