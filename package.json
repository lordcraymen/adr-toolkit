{
  "name": "@lordcraymen/adr-toolkit",
  "version": "0.9.0",
  "description": "CLI tooling to bootstrap, validate and publish Architecture Decision Records.",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./cli": "./dist/cli.js",
    "./presets/depcruise": "./presets/depcruise.cjs",
    "./presets/eslint-boundaries": "./presets/eslint-boundaries.cjs",
    "./templates/adr/ADR-0000-template.md": "./templates/adr/ADR-0000-template.md",
    "./templates/dependency-cruiser": "./templates/.dependency-cruiser.js",
    "./templates/pull-request": "./templates/PULL_REQUEST_TEMPLATE.md",
    "./templates/agent-rules-snippet": "./templates/AGENT_RULES-snippet.md"
  },
  "bin": {
    "adrx": "dist/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "lint": "eslint \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "node --test test/basic.test.mjs",
    "prepare": "npm run build"
  },
  "files": [
    "dist",
    "templates",
    "presets"
  ],
  "keywords": [
    "adr",
    "architecture decision records",
    "cli",
    "documentation"
